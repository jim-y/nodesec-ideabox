{
  "name": "client",
  "version": "1.0.0",
  "description": "",
  "main": "app/js/app.js",
  "scripts": {
    "test": "test",
    "clean-dist": "rm -r dist/*",
    "dist": "mkdir -p dist/js/vendor dist/static dist/css",
    "create-vendor": "concat-cli -f node_modules/angular/angular.min.js node_modules/angular-ui-router/release/angular-ui-router.min.js -o dist/js/vendor/vendor.js",
    "copy-static": "cp -R app/**/*.html dist/static && cp -R app/js/**/*.html dist/static && cp app/index.html dist/index.html",
    "copy-images": "cp -R app/img dist/img",
    "build:scss": "node-sass app/css/main.scss dist/css/main.css",
    "build:js": "watchify -v -d -e app/js/app.js -t [ babelify --presets [ es2015 ] --comments false ] -o dist/js/app.js",
    "build": "npm run clean-dist && npm run dist && npm run build:scss && npm run copy-static && npm run create-vendor && npm run build:js",
    "serve": "pushd ./dist; python -m SimpleHTTPServer 8000; popd",
    "watch": "npm-watch"
  },
  "author": "Jim-Y",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.5.8",
    "angular-ui-router": "^0.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "concat-cli": "^4.0.0",
    "node-sass": "^3.8.0",
    "npm-watch": "^0.1.6",
    "watchify": "^3.7.0"
  },
  "watch": {
    "copy-static": {
      "patterns": ["app"],
      "extensions": "html"
    },
    "build:scss": {
      "patterns": ["app/css"],
      "extensions": "scss"
    }
  }
}
